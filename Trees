//views
import java.util.*;

// Tree node class
static class Node {
    int val;
    Node left, right;
    Node(int val) {
        this.val = val;
        left = right = null;
    }
}

// 1. Right View
static List<Integer> rightView(Node root) {
    List<Integer> res = new ArrayList<>();
    if (root == null) return res;

    Queue<Node> q = new LinkedList<>();
    q.add(root);

    while (!q.isEmpty()) {
        int size = q.size();
        for (int i = 0; i < size; i++) {
            Node cur = q.poll();
            if (i == size - 1) res.add(cur.val); // last node in level
            if (cur.left != null) q.add(cur.left);
            if (cur.right != null) q.add(cur.right);
        }
    }
    return res;
}

// 2. Left View
static List<Integer> leftView(Node root) {
    List<Integer> res = new ArrayList<>();
    if (root == null) return res;

    Queue<Node> q = new LinkedList<>();
    q.add(root);

    while (!q.isEmpty()) {
        int size = q.size();
        for (int i = 0; i < size; i++) {
            Node cur = q.poll();
            if (i == 0) res.add(cur.val); // first node in level
            if (cur.left != null) q.add(cur.left);
            if (cur.right != null) q.add(cur.right);
        }
    }
    return res;
}

// 3. Zig-Zag Traversal
static List<Integer> zigZagTraversal(Node root) {
    List<Integer> res = new ArrayList<>();
    if (root == null) return res;

    Queue<Node> q = new LinkedList<>();
    q.add(root);
    boolean leftToRight = true;

    while (!q.isEmpty()) {
        int size = q.size();
        int[] level = new int[size];
        for (int i = 0; i < size; i++) {
            Node cur = q.poll();
            int index = leftToRight ? i : size - 1 - i;
            level[index] = cur.val;
            if (cur.left != null) q.add(cur.left);
            if (cur.right != null) q.add(cur.right);
        }
        for (int val : level) res.add(val);
        leftToRight = !leftToRight;
    }
    return res;
}

// 4. Top View
static List<Integer> topView(Node root) {
    List<Integer> res = new ArrayList<>();
    if (root == null) return res;

    class Pair { Node node; int hd; Pair(Node n, int h) { node = n; hd = h; } }
    Map<Integer, Integer> map = new TreeMap<>();
    Queue<Pair> q = new LinkedList<>();
    q.add(new Pair(root, 0));

    while (!q.isEmpty()) {
        Pair p = q.poll();
        if (!map.containsKey(p.hd)) map.put(p.hd, p.node.val);
        if (p.node.left != null) q.add(new Pair(p.node.left, p.hd - 1));
        if (p.node.right != null) q.add(new Pair(p.node.right, p.hd + 1));
    }

    res.addAll(map.values());
    return res;
}

// 5. Bottom View
static List<Integer> bottomView(Node root) {
    List<Integer> res = new ArrayList<>();
    if (root == null) return res;

    class Pair { Node node; int hd; Pair(Node n, int h) { node = n; hd = h; } }
    Map<Integer, Integer> map = new TreeMap<>();
    Queue<Pair> q = new LinkedList<>();
    q.add(new Pair(root, 0));

    while (!q.isEmpty()) {
        Pair p = q.poll();
        map.put(p.hd, p.node.val); // overwrite for bottom view
        if (p.node.left != null) q.add(new Pair(p.node.left, p.hd - 1));
        if (p.node.right != null) q.add(new Pair(p.node.right, p.hd + 1));
    }

    res.addAll(map.values());
    return res;
}
-----------------------------------------------------------------------------------------------
//LCA(Lowest Common Ancestor)
Node lca(Node r, int a, int b) {
    if (r == null) return null;
    if (r.val == a || r.val == b) return r;

    Node leftLca = lca(r.left, a, b);
    Node rightLca = lca(r.right, a, b);

    if (leftLca != null && rightLca != null) return r;
    return (leftLca != null) ? leftLca : rightLca;
}   
