//Diameter of Binary Tree
class TreeNode {
    int val;
    TreeNode left, right;
    TreeNode(int d) {
        val = d;
        left = right = null;
    }
}

class BeingZero {
    int ans;
    int diameterOfTree(TreeNode r) {
        ans = 0;
        height(r);
        return ans;
    }
    int height(TreeNode r) {
        if (r == null) return 0;
        int l = height(r.left);
        int ri = height(r.right);
        ans = Math.max(ans, l + ri + 1);
        return Math.max(l, ri) + 1;
    }
}
-----------------------------------------------------------------------------------------------
//Nodes at Kth level
int nodesAtKLevel(Node r, int k) {
    if (r == null) return 0;
    if (k < 0) return 0;
    Queue<Node> q = new LinkedList<>();
    q.add(r);
    int ans = -1;
    
    while (!q.isEmpty()) {
        ans++;
        int size = q.size();
        if (ans == k) return size;
        
        for (int i = 0; i < size; i++) {
            Node cur = q.poll();
            if (cur.left != null) q.add(cur.left);
            if (cur.right != null) q.add(cur.right);
        }
    }
    return 0;
}
