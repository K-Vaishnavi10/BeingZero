//Covered and Uncovered Nodes
static class Node {
    int val;
    Node left, right;
    Node(int val) {
        this.val = val;
        left = right = null;
    }
}

// Sum of left boundary (excluding leaves)
static int sumLeftBoundary(Node node) {
    if (node == null) return 0;
    if (node.left != null) return node.val + sumLeftBoundary(node.left);
    else if (node.right != null) return node.val + sumLeftBoundary(node.right);
    return 0; // leaf node excluded
}

// Sum of right boundary (excluding leaves)
static int sumRightBoundary(Node node) {
    if (node == null) return 0;
    if (node.right != null) return node.val + sumRightBoundary(node.right);
    else if (node.left != null) return node.val + sumRightBoundary(node.left);
    return 0; // leaf node excluded
}

// Sum of all leaf nodes
static int sumLeaves(Node node) {
    if (node == null) return 0;
    if (node.left == null && node.right == null) return node.val;
    return sumLeaves(node.left) + sumLeaves(node.right);
}

// Total sum of uncovered nodes (root + left boundary + right boundary + leaves)
static int sumUncovered(Node root) {
    if (root == null) return 0;
    int sum = root.val;
    if (root.left != null) sum += sumLeftBoundary(root.left);
    if (root.right != null) sum += sumRightBoundary(root.right);
    sum += sumLeaves(root.left) + sumLeaves(root.right);
    return sum;
}

// Total sum of all nodes
static int sumAll(Node root) {
    if (root == null) return 0;
    return root.val + sumAll(root.left) + sumAll(root.right);
}

// Sum of covered nodes
static int sumCovered(Node root) {
    return sumAll(root) - sumUncovered(root);
}
-----------------------------------------------------------------------------------------------
//Burn a tree
class BeingZero {

    public int solve(TreeNode root, int st) {

        if (root == null)
            return 0;

        // Map to store parent of each node
        HashMap<TreeNode, TreeNode> parent = new HashMap<>();

        Queue<TreeNode> q = new LinkedList<>();
        q.add(root);

        // Step 1: Map parents using BFS
        while (!q.isEmpty()) {
            TreeNode ele = q.poll();

            if (ele.left != null) {
                parent.put(ele.left, ele);
                q.add(ele.left);
            }

            if (ele.right != null) {
                parent.put(ele.right, ele);
                q.add(ele.right);
            }
        }

        // Step 2: Find starting node
        TreeNode start = search(root, st);

        // Step 3: Burn the tree
        HashSet<TreeNode> vis = new HashSet<>();
        q.add(start);
        vis.add(start);

        int time = 0;

        while (!q.isEmpty()) {
            int n = q.size();
            boolean flag = false;

            for (int i = 0; i < n; i++) {
                TreeNode ele = q.poll();

                // Burn parent
                if (parent.containsKey(ele) && !vis.contains(parent.get(ele))) {
                    vis.add(parent.get(ele));
                    q.add(parent.get(ele));
                    flag = true;
                }

                // Burn left child
                if (ele.left != null && !vis.contains(ele.left)) {
                    vis.add(ele.left);
                    q.add(ele.left);
                    flag = true;
                }

                // Burn right child
                if (ele.right != null && !vis.contains(ele.right)) {
                    vis.add(ele.right);
                    q.add(ele.right);
                    flag = true;
                }
            }

            if (flag)
                time++;
        }

        return time;
    }

    // Search function to find starting node
    private TreeNode search(TreeNode root, int val) {
        if (root == null)
            return null;

        if (root.val == val)
            return root;

        TreeNode left = search(root.left, val);
        if (left != null)
            return left;

        return search(root.right, val);
    }
}
