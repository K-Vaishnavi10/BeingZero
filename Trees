//Is Mirror Image
static class Node {
    int val;
    Node left, right;
    Node(int val) {
        this.val = val;
        left = right = null;
    }
}

// Mirror the tree in-place
static void mirror(Node root) {
    if (root == null) return;

    // Swap left and right
    Node temp = root.left;
    root.left = root.right;
    root.right = temp;

    mirror(root.left);
    mirror(root.right);
}

// Check if two trees are mirror images
static boolean isMirror(Node t1, Node t2) {
    if (t1 == null && t2 == null) return true;
    if (t1 == null || t2 == null) return false;

    return (t1.val == t2.val) &&
           isMirror(t1.left, t2.right) &&
           isMirror(t1.right, t2.left);
}

// Inorder traversal to fill list
static void inorder(Node root, List<Integer> res) {
    if (root == null) return;
    inorder(root.left, res);
    res.add(root.val);
    inorder(root.right, res);
}
-----------------------------------------------------------------------------------------------
//Nodes at K distance
int solve(TreeNode r, int s, int k) {
    List<TreeNode> l = new ArrayList<>();
    fph(r, s, l); // Find path to node s
    int ans = 0;
    ans += helper(l.get(0), k);
    for (int i = 1; i < l.size(); i++) {
        if (k - i == 0)
            ans++;
        else if (l.get(i).left == l.get(i - 1))
            ans += helper(l.get(i).right, k - i - 1);
        else
            ans += helper(l.get(i).left, k - i - 1);
    }
    return ans;
}

// Function to find path from root to node s
public void fph(TreeNode r, int s, List<TreeNode> l) {
    if (r == null) return;
    if (r.val == s) {
        l.add(r);
        return;
    }
    fph(r.left, s, l);
    if (l.size() > 0) {
        l.add(r);
        return;
    }
    fph(r.right, s, l);
    if (l.size() > 0) {
        l.add(r);
        return;
    }
}

// Level-order helper to count nodes at distance k
public int helper(TreeNode r, int k) {
    if (r == null || k < 0) return 0;
    Queue<TreeNode> q = new LinkedList<>();
    q.add(r);
    int level = 0;
    while (!q.isEmpty()) {
        int size = q.size();
        if (level == k) return size;
        for (int i = 0; i < size; i++) {
            TreeNode cur = q.remove();
            if (cur.left != null) q.add(cur.left);
            if (cur.right != null) q.add(cur.right);
        }
        level++;
    }
    return 0;
}
